<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GetBookDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Trip"
            android:fontFamily="@font/gotham"
            android:textColor="@color/theme"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editTextSelectedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selected Time"
            android:layout_below="@id/textViewTitle"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:enabled="false"/>


        <EditText
            android:id="@+id/editTextNumPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Passengers"
            android:inputType="number"
            android:layout_below="@id/editTextSelectedTime"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:enabled="false"/>

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:layout_below="@id/editTextNumPassengers"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:enabled="false" />
        <EditText
            android:id="@+id/editTextCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Pay"
            android:layout_below="@id/editTextPrice"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:enabled="false" />

        <EditText
            android:id="@+id/editTextSeatNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seat Numbers (comma-separated)"
            android:layout_below="@id/editTextCost"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp" />

        <!-- Add a ListView to display seat numbers -->
        <ListView
            android:id="@+id/listViewSeatNumbers"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="number"
            android:layout_below="@id/editTextSeatNumbers"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/button_Update"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listViewSeatNumbers"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:backgroundTint="@color/theme"
            android:fontFamily="@font/calibri"
            android:text="Update" />

        <Button
            android:id="@+id/button_payment"
            android:layout_width="372dp"
            android:layout_height="300dp"
            android:layout_below="@+id/button_Update"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-374dp"
            android:layout_marginBottom="19dp"
            android:layout_toStartOf="@+id/button_Update"
            android:backgroundTint="@color/theme"
            android:fontFamily="@font/calibri"
            android:text="Make Payment" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
